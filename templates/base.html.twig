<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"
    />
    {# Run `composer require symfony/webpack-encore-bundle` to start using
    Symfony UX #} {% block stylesheets %}
    {{
      encore_entry_link_tags("app")
    }}
    {{
      encore_entry_link_tags("Bulma")
    }}
    {% endblock %} {% block javascripts %}
    {{
      encore_entry_script_tags("app")
    }}
    {% endblock %}
  </head>
  <body>
    {% block body %}
    <div class="navbar">
      <div class="navbar-end">
        {% if is_granted('ROLE_ADMIN') %}
          <a href="{{ path('admin') }}" class="navbar-item">Dashboard</a>
        {% endif %}
        <div class="navbar-item">
          <div class="buttons">
            <a class="button is-primary" href="{{ path('app_register') }}">
              <strong>Sign up</strong>
            </a>
            <a class="button is-light" href="{{ path('app_login') }}">
              Log in
            </a>
          </div>
        </div>
      </div>
    </div>
    {% for flash in app.flashes('success') %}
      <div class="notification is-success">{{ flash }}</div>
    {% endfor %}
    {% for flash in app.flashes('error') %}
      <div class="notification is-danger">{{ flash }}</div>
    {% endfor %}

    <img src="/uploads/images/{{ user.avatar }}" alt="">

    {% endblock %}
  </body>
</html>
