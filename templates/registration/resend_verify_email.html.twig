{% extends 'base.html.twig' %}
{% block title %}Verify Email{% endblock %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="login-form bg-light mt-4 p-4">
            <h1 class="h3 mb-3 font-weight-normal">Verify your Email</h1>
            <p>
                A verification email was sent - please click it to enable your
                account before logging in.
            </p>
            <form method="post" class="">

                <div class="field">
                    <label for="inputEmail" class="label">Email</label>
                    <div class="control">
                        <input type="email" name="email" id="inputEmail" class="input" required autofocus>
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <button class="button is-success" type="submit">
                            re-send
                        </button>
                    </div>
                </div>

                {# <a href="{{ path('app_verify_resend_email', {resendEmail : true}) }}" class="button is-primary">Re-send Email</a> #}
            </form>
        </div>
    </div>
</div>
{% endblock %}